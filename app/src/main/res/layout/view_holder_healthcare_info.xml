<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_normal">

        <org.mmtextview.components.MMTextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:text="Health is the ability of a biological system to acquire, convert, allocate, distribute." />

        <ImageView
            android:id="@+id/iv_hero"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_Title"
            android:layout_marginTop="@dimen/margin_small"
            android:scaleType="fitXY"
            android:src="@drawable/tech_talk" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_hero"
            android:layout_marginTop="@dimen/margin_small">

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_pretty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_pretty_border"
                android:padding="@dimen/margin_smallest"
                android:text="Pretty"
                android:textSize="10sp"
                android:textColor="@color/colorPrettyBlue" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_pretty"
                android:layout_alignTop="@+id/tv_pretty"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toRightOf="@+id/tv_pretty"
                android:padding="@dimen/margin_smallest"
                android:text="Wai Yan J"
                android:textSize="10sp"/>

            <RelativeLayout
                android:id="@+id/rl_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_name">

                <ImageView
                    android:id="@+id/iv_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_assignment_turned_in_black_24dp" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/iv_view"
                    android:text="5302"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_view">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_comment_black_24dp" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/iv_comment"
                    android:text="229"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_comment">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_thumb_up_black_24dp" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/iv_like"
                    android:text="56"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

